#!/usr/bin/python3
import sys
a = [ ]
for arg in sys.argv[1:]:
  if arg == '-h' or arg == '--help':
    print("Usage: fnv1024sum [FILE]...")
    exit(0)
  if arg == "-v" or arg == '--version':
    print("v0.8.2")
    exit(0)
  a.append(arg)
if len(a) == 0:
  a = ['-']
fnvtwopow = 1024
fnvprime = 5016456510113118655434598811035278955030765345404790744303017523831112055108147451509157692220295382716162651878526895249385292291816524375083746691371804094271873160484737966720260389217684476157468082573
fnvoffset = 14197795064947621068722070641403218320880622795441933960878474914617582723252296732303717722150864096521202355549365628174669108571814760471015076148029755969804077320157692458563003215304957150157403644460363550505412711285966361610267868082893823963790439336411086884584107735010676915
fnvmask = (1 << fnvtwopow) - 1
for filename in a:
  isstdin = True
  hval = fnvoffset
  if filename == '-':
    file = sys.stdin.detach()
  else:
    file = open(filename, 'rb')
    isstdin = False
  bytes = file.read()
  if not isstdin:
    file.close()
  for c in bytes:
    hval = hval ^ c
    hval = hval * fnvprime
    hval = hval & fnvmask
  print(hex(hval)[2:].rjust(int(fnvtwopow/4), '0'))
exit(0)
