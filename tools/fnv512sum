#!/usr/bin/python3
import sys
a = [ ]
for arg in sys.argv[1:]:
  if arg == '-h' or arg == '--help':
    print("Usage: fnv512sum [FILE]...")
    exit(0)
  if arg == "-v" or arg == '--version':
    print("v0.8.2")
    exit(0)
  a.append(arg)
if len(a) == 0:
  a = ['-']
fnvtwopow = 512
fnvprime = 35835915874844867368919076489095108449946327955754392558399825615420669938882575126094039892345713852759
fnvoffset = 9659303129496669498009435400716310466090418745672637896108374329434462657994582932197716438449813051892206539805784495328239340083876191928701583869517785
fnvmask = (1 << fnvtwopow) - 1
for filename in a:
  isstdin = True
  hval = fnvoffset
  if filename == '-':
    file = sys.stdin.detach()
  else:
    file = open(filename, 'rb')
    isstdin = False
  bytes = file.read()
  if not isstdin:
    file.close()
  for c in bytes:
    hval = hval ^ c
    hval = hval * fnvprime
    hval = hval & fnvmask
  print(hex(hval)[2:].rjust(int(fnvtwopow/4), '0'))
exit(0)
